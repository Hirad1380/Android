<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">



    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/twotone_share_24"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title"/>


    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/share_button"
        android:layout_marginTop="10dp"
        android:src="@drawable/twotone_favorite_24"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="10dp"
        android:background="#00FFFFFF"/>


    <ImageButton
        android:id="@+id/more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favorite_button"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:background="#00FFFFFF"
        android:src="@drawable/twotone_expand_more_24"
        android:textAlignment="center" />


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/image_view"
        android:textSize="17dp"
        android:textStyle="bold"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@id/title"
        android:layout_marginVertical="5dp"
        android:layout_toRightOf="@id/image_view"
        android:layout_marginLeft="10dp"/>



    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_marginVertical="5dp"
        android:layout_toRightOf="@id/notihng"
        android:layout_below="@id/category"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/notihng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="$"
        android:layout_marginVertical="5dp"
        android:textSize="13dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image_view"
        android:layout_below="@id/category"/>



    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:textSize="13dp"
        android:layout_below="@id/more_button"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="6dp"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_below="@+id/description"/>


    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>





</RelativeLayout>